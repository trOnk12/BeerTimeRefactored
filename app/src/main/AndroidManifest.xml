<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.gebruiker.beertimerefactor">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".ui.main.MainActivity"
            android:theme="@style/AppThemeNoActionBar">
        </activity>

        <activity
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan"
            android:name=".ui.register.RegisterActivity"
            android:theme="@style/AppThemeNoActionBar" />

        <activity
            android:name=".ui.chat.ChatActivity"
            android:theme="@style/AppThemeNoActionBar" />

        <activity
            android:name=".ui.dialogs.DialogsActivity"
            android:theme="@style/AppThemeNoActionBar">
        </activity>

        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan"
            android:name=".ui.login.LoginActivity"
            android:theme="@style/AppThemeNoActionBar">
        </activity>

        <activity
            android:name=".ui.filter.FilterEventsActivity"
            android:theme="@style/AppThemeNoActionBar">
        </activity>

        <activity
            android:theme="@style/AppThemeNoActionBar"
            android:name=".ui.friends.FriendsListActivity">
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".ui.map.MapsActivity"
            android:label="@string/title_activity_maps">
        </activity>

        <activity android:name=".ui.event.EventDescriptionActivity"/>

    </application>

</manifest>