<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="2dp"
    android:background="@drawable/blue_rectangle"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_baseline_account_circle_24px"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:layout_margin="2dp"
        app:layout_constraintLeft_toRightOf="@id/profile_icon"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/friend_name"
            tools:text="Name: Mateusz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/friend_country"
            tools:text="Country: Poland"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/friend_city"
            tools:text="City: KrakÃ³w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/friend_since"
            tools:text="Since: 20.06.2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>

</android.support.constraint.ConstraintLayout>