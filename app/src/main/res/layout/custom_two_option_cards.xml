<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#91FFA726"
    android:orientation="vertical"
    android:weightSum="2">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/background_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/event2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_alignBottom="@id/background_image"
                    android:background="#4D000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/background_image"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="6dp"
                    android:text="Search events"
                    android:textColor="@color/white"
                    android:textSize="18dp" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#AA3F51B5"
                android:gravity="left|center_vertical"
                android:paddingLeft="8dp"
                android:text="@string/find_event"
                android:textColor="@color/white" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/background_image1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/people1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_alignBottom="@id/background_image1"
                    android:background="#4D000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/background_image1"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="6dp"
                    android:text="Look on map"
                    android:textColor="@color/white"
                    android:textSize="18dp" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#AA3F51B5"
                android:gravity="left|center_vertical"
                android:paddingLeft="8dp"
                android:text="@string/find_map_event"
                android:textColor="@color/white" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>